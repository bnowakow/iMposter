<UserControl x:Class="iMposter.View.Gesture.GestureDetectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <Button Content="Start Gesture Capture" x:Name="gestureStartCaptureButton" Click="gestureStartCaptureButton_Click" FontSize="24" />
            <TextBox Text="Gesture Capture Status" x:Name="gestureCaptureStatusTextbox" FontSize="24" />
            <StackPanel Orientation="Horizontal" x:Name="gestureNamesPlaceholder"></StackPanel>
            <Button Content="Gesture Detect" x:Name="gestureDetectButton" Click="gestureDetectButton_Click" FontSize="24" />
            <TextBox Text="Gesture Detect Status" x:Name="gestureDetectStatusTextbox" FontSize="24" />
            <StackPanel Orientation="Horizontal">
                <Button x:Name="toggleContinuesCapturingButton" Click="toggleContinuesCapturingButton_Click" FontSize="20" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
